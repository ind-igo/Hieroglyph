{
  "name": "Hieroglyph",
  "description": "Youtube Transcript Viewer",
  "version": "0.0.1",
  "scripts": {
    "dev": "env $(cat .env | grep -v \"#\" | xargs) sapper dev",
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "build": "npm run build:tailwind && sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "dev:docker:build": "docker build -t saadali93/hg-app:latest .",
    "dev:docker:run": "docker run -d -p 3000:3000 saadali93/hg-app:latest"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "aws-sdk": "^2.783.0",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.1",
    "cors": "^2.8.5",
    "express": "latest",
    "qs": "^6.9.6",
    "sirv": "^1.0.7",
    "svelte-awesome": "^2.3.0",
    "youtube-captions-scraper": "^1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/runtime": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2",
    "rollup": "^2.32.1",
    "rollup-plugin-svelte": "^6.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.28.10",
    "svelte": "^3.29.4",
    "tailwindcss": "^1.9.6"
  }
}
